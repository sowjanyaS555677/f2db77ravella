extends layout
block content
  h1= title
    - var runs  = results
  div(class="container-fluid")
  div(class="row")

    each Run,index in runs
            table(style='width:100%')
                tr
                    div(class="col-sm-2" onclick=`buy(${index})`) #{Run.Run_type}
                    div(class="col-sm-2" onclick=`buy(${index})`) #{Run.size}
                    div(class="col-sm-2" onclick=`buy(${index})`) #{Run.cost}

    script.
     
      function buy(line)
      {
        alert(`Run details ${line+1}`)
      }