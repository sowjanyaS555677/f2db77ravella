extends layout

block content
  h1= title
  - let createdestination = `dispatch(\"/resource/create\")`
  button.btn( class="btn-danger ml-1",id="create" onclick= createdeletedestination) create
  - var results = results
  div(class="container-fluid")
    div(class="row m-1")
      each item in results  
        - let destination = `dispatch(\"/resource/update?id=${item._id}\")`
        - let detaildestination = `dispatch(\"/resource/detail?id=${item._id}\")`
        - let deletedestination = `dispatch(\"/resource/delete?id=${item._id}\")`
        div(class="row-sm-2", class="m-1") Item #{item.Run_Type}(#{item.Run_age}) is #{item.Run_rank}
          button.btn( class="btn-primary ml-1", onclick= destination) Update
          button.btn( class="btn-primary ml-1", onclick= detaildestination) detail
          button.btn( class="btn-danger ml-1", onclick= deletedestination) delete
   
  script.
    function dispatch(path){
      window.location.href=path
    }